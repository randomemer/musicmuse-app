<resources>
  <!-- Base application theme. -->
  <style name="Theme.MusicMuse"
         parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorOnPrimary">@color/text</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/secondary</item>
    <item name="colorOnSecondary">@color/text</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="SplashScreenTheme" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/background</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
    <item name="postSplashScreenTheme">@style/Theme.MusicMuse</item>
  </style>
</resources>
